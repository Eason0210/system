                    {
                         "description": "将单独按下的 left shift 映射为 Option + f12，以切换输入法(global)",
                         "manipulators": [
                             {
                                 "from": {
                                     "key_code": "left_shift"
                                 },
                                 "to_if_alone": [
                                     {
                                         "key_code": "f12",
                                         "modifiers": [
                                             "left_option"
                                         ]
                                     }
                                 ],
                                 "to_if_held_down": [
                                     {
                                         "key_code": "left_shift"
                                     }
                                 ],
                                 "type": "basic"
                             }
                         ]
                   },
                    {
                      "description": "Emacs key bindings [ctrl+g -> Esc]",
                      "manipulators": [
                        {
                          "type": "basic",
                          "from": {
                            "key_code": "g",
                            "modifiers": {
                              "mandatory": [
                                "left_control"
                              ],
                              "optional": [
                                "caps_lock",
                                "shift"
                              ]
                            }
                          },
                          "to": [
                            {
                              "key_code": "escape"
                            }
                          ],
                          "conditions": [
                            {
                              "type": "frontmost_application_unless",
                              "bundle_identifiers": [
                                "^org\\.gnu\\.Emacs$",
                                "^com\\.googlecode\\.iterm2",
                                "^net\\.kovidgoyal\\.kitty$",
                                "^com\\.apple\\.Terminal$",
                                "^org\\.vim\\."
                              ]
                            }
                          ]
